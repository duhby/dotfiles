set $mod Mod4

floating_modifier $mod normal

bindsym --to-code {
    $mod+Return exec $term
    $mod+i exec zen
    $mod+m exec lunarclient

    # Reload
    $mod+Shift+r reload
    #$mod+Shift+r reload, exec eww reload

    # Close
    $mod+q kill
    Mod1+F4 kill

    # Switch to workspace
    $mod+1 workspace $ws1
    $mod+2 workspace $ws2
    $mod+3 workspace $ws3
    $mod+4 workspace $ws4
    $mod+5 workspace $ws5
    $mod+6 workspace $ws6
    $mod+7 workspace $ws7
    $mod+8 workspace $ws8
    $mod+9 workspace $ws9
    $mod+0 workspace $ws10

    # Move focused container to workspace
    $mod+Shift+1 move container to workspace $ws1; workspace $ws1
    $mod+Shift+2 move container to workspace $ws2; workspace $ws2
    $mod+Shift+3 move container to workspace $ws3; workspace $ws3
    $mod+Shift+4 move container to workspace $ws4; workspace $ws4
    $mod+Shift+5 move container to workspace $ws5; workspace $ws5
    $mod+Shift+6 move container to workspace $ws6; workspace $ws6
    $mod+Shift+7 move container to workspace $ws7; workspace $ws7
    $mod+Shift+8 move container to workspace $ws8; workspace $ws8
    $mod+Shift+9 move container to workspace $ws9; workspace $ws9
    $mod+Shift+0 move container to workspace $ws10; workspace $ws10

    # >> Directional focus
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right

    # Rofi
    $mod+space exec $menu
    #$mod+y exec rofi_mpvtube

    # Screenshots
    Print exec "grimshot --notify copy output"
    Shift+Print exec "grimshot --notify copy window"
    Control+Print exec "grimshot --notify save output"
    Shift+Control+Print exec "grimshot --notify save window"
    # Open last screenshot with image viewer
    #$mod+Print exec "cd $screenshots_dir && iv $(ls -t)"
    # Open last screenshot with Gimp
    #$mod+Shift+Print exec "cd $screenshots_dir && gimp $(ls -t | head -n1)"

    # Brightness
    XF86MonBrightnessDown exec sh -c \
      'brightnessctl set 5%- && \
       brightness=$(brightnessctl get); \
       max=$(brightnessctl max); \
       percent=$((brightness * 100 / max)); \
       notify-send "Brightness: $percent%"'
    XF86MonBrightnessUp exec sh -c \
      'brightnessctl set 5%+ && \
       brightness=$(brightnessctl get); \
       max=$(brightnessctl max); \
       percent=$((brightness * 100 / max)); \
       notify-send "Brightness: $percent%"'

    # Volume
    XF86AudioRaiseVolume exec sh -c \
      'wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ && \
       vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk "{print int(\$2*100)}"); \
       notify-send "Volume: $vol%"'
    XF86AudioLowerVolume exec sh -c \
      'wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- && \
       vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk "{print int(\$2*100)}"); \
       notify-send "Volume: $vol%"'
    XF86AudioMute exec sh -c \
      'wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; \
       if wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q MUTED; then \
         notify-send "Muted"; \
       else \
         vol=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk "{print int(\$2*100)}"); \
         notify-send "Volume: $vol%"; \
       fi'
}
